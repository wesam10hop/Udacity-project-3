{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-shadow": "error",
    "eqeqeq": "error",
    "curly": "error"
  }
}
